<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Manage Cars</title>
    <!-- Thêm link Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        input {
            margin: 10px;
        }

        button {
            margin: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <br>
        <br>
        <h1>Danh sách xe hơi</h1>
        <a href="/cars/form" class="btn btn-primary">Tạo xe mới</a>
        <br><br>

        <!-- Bảng hiển thị danh sách xe -->
        <table class="table table-bordered table table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên xe</th>
                    <th>Hãng sản xuất</th>
                    <th>Năm sản xuất</th>
                    <th>Giá bán</th>
                    <th>Mô tả</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% cars.forEach(function(car, index) { %>
                    <tr>
                        <th scope="row">
                            <%= index+1 %>
                        </th>
                        <td>
                            <%= car.tenXe %>
                        </td>
                        <td>
                            <%= car.hangSanXuat %>
                        </td>
                        <td>
                            <%= car.namSanXuat %>
                        </td>
                        <td>
                            <%= car.giaBan %> $
                        </td>
                        <td>
                            <%= car.moTa %>
                        </td>
                        <td>
                            <a href="/cars/edit/<%= car._id %>" class="btn btn-warning btn-sm">Sửa</a>
                            <a href="/cars/delete/<%= car._id %>" class="btn btn-danger btn-sm"
                                onclick="return confirm('Bạn chắc chắn muốn xóa xe này?')">Xóa</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Thêm script bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>